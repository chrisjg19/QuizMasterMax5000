<!-- Form to handle login -->
<div class="container d-flex flex-column col-4">
  <h1 class="display-5">Login</h1>

  <div class="mb-3">
    <label for="emailInput" class="form-label">Email:</label>
    <input
      type="email"
      class="form-control input"
      id="emailInput"
      placeholder="name@coolemailsite.com"
    />
  </div>

  <div class="mb-3">
    <label for="passwordInput" class="form-label">Password:</label>
    <input
      type="password"
      class="form-control input"
      id="passwordInput"
      placeholder="super secret password"
    />
  </div>

  <div class="d-flex justify-content-end">
    <button class="btn btn-warning login-btn">Login</button>
  </div>

  <div class="d-flex justify-content-end">
    <button class="btn btn-warning signup-btn ">Signup</button>
  </div>

  <script src="/js/login.js"></script>
</div>